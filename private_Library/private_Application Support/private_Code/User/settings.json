{
  "editor.fontFamily": "'CaskaydiaCove Nerd Font', 'JetbrainsMono Nerd Font', Consolas, 'Courier New', monospace",
  "editor.fontSize": 12.5,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.cursorBlinking": "smooth",
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.minimap.enabled": false,

  "breadcrumbs.enabled": true,

  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 12,

  "search.followSymlinks": false,

  "git.autofetch": true,

  "php.suggest.basic": false,
  "php.validate.enable": false,
  "emmet.excludeLanguages": ["markdown", "php"],

  "liveServer.settings.donotVerifyTags": true,

  "workbench.colorTheme": "GitHub Dark",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.editor.enablePreview": false,
  "workbench.colorCustomizations": {
    "terminal.foreground": "#eee"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },

  "redhat.telemetry.enabled": false,
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "yaml.schemas": {
    "Kubernetes": ["kubernetes.yaml", "deployment.yaml", "service.yaml"]
  },
  "yaml.customTags": ["!reference sequence"],

  "docker.enableDockerComposeLanguageService": true,
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced"
  },

  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "yaml": true
  },

  "files.associations": {
    ".env": "properties",
    "*.conf": "properties",
    "*.bak": "bat"
  },

  "[python]": {
    "editor.formatOnType": true
  },

  "kestra.api.url": "https://api.kestra.io/v1"
}
