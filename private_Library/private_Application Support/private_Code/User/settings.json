{
  "apc.electron": {},
  "apc.stylesheet": {
    "*": "font-family: CaskaydiaCove Nerd Font;"
  },

  "editor.fontFamily": "'CaskaydiaCove Nerd Font', 'JetbrainsMono Nerd Font', Consolas, 'Courier New', monospace",
  "editor.fontSize": 13.5,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.cursorBlinking": "smooth",
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.minimap.enabled": false,
  "editor.detectIndentation": false,

  "breadcrumbs.enabled": true,

  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 12,
  "window.zoomLevel": 0,

  "search.followSymlinks": false,

  "git.autofetch": true,

  "php.suggest.basic": false,
  "php.validate.enable": false,
  "emmet.excludeLanguages": ["markdown", "php"],

  "liveServer.settings.donotVerifyTags": true,

  "workbench.colorTheme": "GitHub Dark",
  "workbench.iconTheme": "catppuccin-macchiato",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.editor.enablePreview": false,
  "workbench.colorCustomizations": {
    "terminal.foreground": "#eee"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },

  "redhat.telemetry.enabled": false,
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "yaml.schemas": {
    "Kubernetes": ["kubernetes.yaml", "deployment.yaml", "service.yaml"]
  },
  "yaml.customTags": ["!reference sequence"],

  "[dockerfile]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "docker.enableDockerComposeLanguageService": true,
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced"
  },

  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "yaml": true
  },

  "files.associations": {
    ".env": "properties",
    "*.conf": "properties",
    "*.bak": "bat"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[nginx]": {
    "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
  },

  "kestra.api.url": "https://api.kestra.io/v1",

  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  "indentRainbow.includedLanguages": [],
  "indentRainbow.excludedLanguages": ["plaintext"],
  "indentRainbow.updateDelay": 100, // 10 makes it super fast but may cost more resources
  // Defining custom colors instead of default "Rainbow" for dark backgrounds.
  "indentRainbow.colors": [
    "rgba(255,255,64,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(255,127,255,0.3)",
    "rgba(79,236,236,0.3)"
  ],

  // The indent color if the number of spaces is not a multiple of "tabSize".
  "indentRainbow.errorColor": "rgba(128,32,32,0.6)",

  // The indent color when there is a mix between spaces and tabs.
  // To be disabled this coloring set this to an empty string.
  "indentRainbow.tabmixColor": "rgba(128,32,96,0.6)"
}
