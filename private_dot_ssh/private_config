Include ~/.orbstack/ssh/config
Include ~/.colima/ssh_config
Include ~/.ssh/config.d/*

CanonicalizeHostname yes
CanonicalDomains internal.marvincloud.io marvincloud.io

Host *
  IgnoreUnknown UseKeyChain
  UseKeyChain yes
  AddKeysToAgent yes
  ForwardAgent no
  IdentityFile ~/.private/.ssh/keys/github_com_ed25519
  IdentityFile ~/.private/.ssh/keys/gitlab_com_ed25519
  IdentityFile ~/.private/.ssh/keys/marvincloud_io_ed25519

Host github.com
  Hostname github.com
  User msxdan

Host gitlab.com
  HostName gitlab.com
  User msxdan

Host agon
  HostName 192.168.96.10
  User agon

Host argos
  HostName 192.168.96.14
  User msxuser

Host *.marvincloud.io
  User root